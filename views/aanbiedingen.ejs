<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bier aanbiedingen</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300" type="text/css">
  </head>
    <div class="container">
        <form action="/aanbiedingen" method="post" onsubmit="submitBtn.disabled = true">
          <input name="merk" type="text" class="ghost-input" placeholder="Enter een merk">
          <select class="ghost-dropdown" name = "store">
              <option></option>
            <% for ( var i = 0; i < (storeDataResponse && storeDataResponse.length); i++ ) { %>
              <option value = '<%= storeDataResponse[i] %>' > <%= storeDataResponse[i] %> </option>
            <% } %>
            </select>
          <input type="submit" class="ghost-button" value="Aanbiedingen" name = "submitBtn">
        </form>
        <section>
          <h1>Beer</h1>
          <div class="tbl-header">
            <table cellpadding="0" cellspacing="0">
              <thead>
                <tr>
                  <th>Brand</th>
                  <th>Store</th>
                  <th>oldPrice</th>
                  <th>newPrice</th>
                  <th>Volume</th>
                </tr>
              </thead>
            </table>
          </div>
          <div class="tbl-content">
            <table cellpadding="0" cellspacing="0">
              <tbody>
                <tr>
                  <% for (var i = 0; i < (pilsDataResponse && pilsDataResponse.length); i++) { %>
                  <td><%= pilsDataResponse[i].brand %></td>
                  <td><%= pilsDataResponse[i].store %> </td>
                  <td><%= pilsDataResponse[i].oldPrice %></td>
                  <td><%= pilsDataResponse[i].newPrice %></td>
                  <td><%= pilsDataResponse[i].volume %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </section>
    </div>
  </body>
</html>
